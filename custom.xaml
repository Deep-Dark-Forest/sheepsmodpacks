<!-- 搜索机 -->
<local:MyCard Title= "搜索机"
              Margin= "0,10,0,15"
              CanSwap= "True"
              IsSwaped= "False">
  <StackPanel Margin= "25,40,23,15">
    <TextBlock Text= "请输入你想要搜索的内容，并选择一个搜索引擎：" />
    <!-- 百度搜索框 -->
    <TextBox x:Name= "BaiduTextBox"
             Margin= "0,10,0,10"
             Width= "200"
             Height= "35"
             TextChanged= "BaiduTextBox_TextChanged"/>
    <!-- 360搜索框 -->
    <TextBox x:Name= "360TextBox"
             Margin= "0,10,0,10"
             Width= "200"
             Height= "35"
             TextChanged= "360TextBox_TextChanged"/>
    <!-- 搜狗搜索框 -->
    <TextBox x:Name= "SougouTextBox"
             Margin= "0,10,0,10"
             Width= "200"
             Height= "35"
             TextChanged= "SougouTextBox_TextChanged"/>
    <!-- 必应搜索框 -->
    <TextBox x:Name= "BingTextBox"
             Margin= "0,10,0,10"
             Width= "200"
             Height= "35"
             TextChanged= "BingTextBox_TextChanged"/>
    <!-- 搜索按钮 -->
    <local:MyButton Text= "搜索"
                    Margin= "0,10,0,10"
                    Width= "200"
                    Height= "35"
                    Click= "SearchButton_Click"/>
  </StackPanel>
</local:MyCard>
